<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_titelnotfallkontakt"
            android:text="@string/notfallkontakt_verwalten"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_vorname"
            android:hint="@string/vorname"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_nachname"
            android:hint="@string/nachname"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_verhaeltnis"
            android:hint="@string/verh_ltnis_z_b_ehepartner_tochter"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_telefonnummer"
            android:hint="@string/telefonnummer"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_vorschau"
            android:text="@string/vorschau_der_nachricht"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:background="@color/white"
             />

        <TextView
            android:id="@+id/text_nachrichtvorschau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="8sp"
            android:background="@color/mausGrau"
            android:minHeight="100sp"
            android:layout_marginBottom="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8sp"
            android:weightSum="2">

            <Button
                android:id="@+id/button_speichern"
                android:text="@string/bestÃ¤tigen"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"/>

            <Button
                android:id="@+id/button_bearbeiten"
                android:text="@string/bearbeiten"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
